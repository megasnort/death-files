[core]
	#global ignoring
	excludesfile = ~/.gitignore
[user]
	name = Stef Bastiaansen
	email = stef.bastiaansen@wijs.be

[alias]
	a = add
	ch = checkout
	co = commit -am
	c = commit -am
	s = status --short --branch
	b = branch
	pl = pull
	ps = push
 	m = merge
	d = diff
	r = remote
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	type = cat-file -t
	dump = cat-file -p
	au =  update-index --assume-unchanged
	nau = update-index --no-assume-unchanged

[color]
	ui = auto

[merge]
	log = true

[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
